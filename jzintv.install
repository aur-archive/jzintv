post_install()
{
    echo "To use jzintv, you will need to acquire the files:"
    echo "exec.bin, grom.bin and ecs.bin and place them (and other ROMs)"
    echo "in the folder /usr/share/jzintv/rom/"
    echo "(Be sure users have read access to these files.)"
    echo "See /usr/share/jzintv/README.txt for more info."
}

post_upgrade()
{
    post_install
}
